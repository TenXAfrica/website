---
import MainLayout from "../layouts/MainLayout.astro";
import { PageHero } from "../components/PageHero";
import { GlassCard } from "../components/GlassCard";
import { GoldButton } from "../components/GoldButton";
import { OnboardingSteps } from "../components/OnboardingSteps";
import { getEntry } from "astro:content";

const pageData = await getEntry("pages", "partner-network");
const data = pageData!.data;
---

<MainLayout title={data.seo.title} description={data.seo.description}>
    <div class="relative min-h-screen">
        <!-- Hero Section -->
        <PageHero
            client:load
            headline={data.hero.headline}
            subheadline={data.hero.subheadline}
        >
            <a href="/forms/idc-partner?token=website_direct&utm_source=tenxafrica&utm_medium=website&utm_campaign=partner_network">
                <GoldButton client:load>{data.cta!.button.label}</GoldButton>
            </a>
        </PageHero>

        <!-- Value Proposition Section -->
        <section class="py-20 px-6 lg:px-12 border-t border-white/5">
            <div class="max-w-6xl mx-auto">
                <div class="mb-12">
                    <div class="w-12 h-1 bg-tenx-gold mb-6"></div>
                    <h2
                        class="text-3xl md:text-4xl font-heading font-bold text-white mb-4"
                    >
                        {data.valueProp!.title}
                    </h2>
                    <p class="text-lg text-white/60 max-w-2xl">
                        {data.valueProp!.description}
                    </p>
                </div>

                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {
                        data.valueProp!.benefits.map((benefit, index) => (
                            <GlassCard client:visible className="p-6">
                                <div class="w-12 h-12 rounded-xl bg-tenx-gold/10 flex items-center justify-center mb-4">
                                    {benefit.icon === "cube" && (
                                        <svg
                                            class="w-6 h-6 text-tenx-gold"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"
                                            />
                                        </svg>
                                    )}
                                    {benefit.icon === "briefcase" && (
                                        <svg
                                            class="w-6 h-6 text-tenx-gold"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                            />
                                        </svg>
                                    )}
                                    {benefit.icon === "building" && (
                                        <svg
                                            class="w-6 h-6 text-tenx-gold"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                                            />
                                        </svg>
                                    )}
                                    {benefit.icon === "users" && (
                                        <svg
                                            class="w-6 h-6 text-tenx-gold"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
                                            />
                                        </svg>
                                    )}
                                    {benefit.icon === "graduation-cap" && (
                                        <svg
                                            class="w-6 h-6 text-tenx-gold"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path d="M12 14l9-5-9-5-9 5 9 5z" />
                                            <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"
                                            />
                                        </svg>
                                    )}
                                    {benefit.icon === "megaphone" && (
                                        <svg
                                            class="w-6 h-6 text-tenx-gold"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"
                                            />
                                        </svg>
                                    )}
                                </div>
                                <h4 class="font-heading font-bold text-white mb-2">
                                    {benefit.title}
                                </h4>
                                <p class="text-sm text-white/60 leading-relaxed">
                                    {benefit.description}
                                </p>
                            </GlassCard>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Network Roles Section -->
        <section class="py-20 px-6 lg:px-12 border-t border-white/5">
            <div class="max-w-6xl mx-auto">
                <div class="mb-12">
                    <div class="w-12 h-1 bg-tenx-gold mb-6"></div>
                    <h2
                        class="text-3xl md:text-4xl font-heading font-bold text-white mb-4"
                    >
                        {data.networkRoles!.title}
                    </h2>
                    <p class="text-lg text-white/60 max-w-2xl">
                        {data.networkRoles!.description}
                    </p>
                </div>

                <div class="grid md:grid-cols-2 gap-6">
                    {
                        data.networkRoles!.roles.map((role) => (
                            <GlassCard client:visible className="p-8 hover:border-tenx-gold/30 transition-colors">
                                <div class="mb-4">
                                    <span class="text-xs font-mono text-tenx-gold/80 uppercase tracking-wider">
                                        {role.focus}
                                    </span>
                                </div>
                                <h3 class="text-2xl font-heading font-bold text-white mb-3">
                                    {role.title}
                                </h3>
                                <p class="text-white/70 leading-relaxed">
                                    {role.description}
                                </p>
                            </GlassCard>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Ideal Candidate Section -->
        <section
            class="py-20 px-6 lg:px-12 bg-black/40 border-t border-white/5"
        >
            <div class="max-w-6xl mx-auto">
                <div class="grid lg:grid-cols-2 gap-12 items-center">
                    <div>
                        <div class="w-12 h-1 bg-tenx-gold mb-6"></div>
                        <h2
                            class="text-3xl md:text-4xl font-heading font-bold text-white mb-6"
                        >
                            {data.idealCandidate!.title}
                        </h2>
                        <p class="text-lg text-white/60 leading-relaxed mb-8">
                            {data.idealCandidate!.description}
                        </p>
                        <ul class="space-y-4">
                            {
                                data.idealCandidate!.criteria.map(
                                    (criterion) => (
                                        <li class="flex items-start gap-3">
                                            <svg
                                                class="w-5 h-5 text-tenx-gold flex-shrink-0 mt-0.5"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M5 13l4 4L19 7"
                                                />
                                            </svg>
                                            <span class="text-white/80">
                                                {criterion}
                                            </span>
                                        </li>
                                    ),
                                )
                            }
                        </ul>
                    </div>

                    <!-- Stats Panel -->
                    <div class="grid grid-cols-2 gap-4">
                        <GlassCard client:visible className="p-6 text-center">
                            <div
                                class="text-4xl font-heading font-bold text-tenx-gold mb-2"
                            >
                                7+ Yrs
                            </div>
                            <div class="text-sm text-white/60">
                                Avg. Experience
                            </div>
                        </GlassCard>

                        <GlassCard client:visible className="p-6 text-center">
                            <div
                                class="text-4xl font-heading font-bold text-tenx-gold mb-2"
                            >
                                100%
                            </div>
                            <div class="text-sm text-white/60">
                                Client Ownership
                            </div>
                        </GlassCard>

                        <GlassCard client:visible className="p-6 text-center">
                            <div
                                class="text-4xl font-heading font-bold text-tenx-gold mb-2"
                            >
                                3+
                            </div>
                            <div class="text-sm text-white/60">
                                Clients
                            </div>
                        </GlassCard>

                        <GlassCard client:visible className="p-6 text-center">
                            <div
                                class="text-4xl font-heading font-bold text-tenx-gold mb-2"
                            >
                                Zero
                            </div>
                            <div class="text-sm text-white/60">
                                Admin Friction
                            </div>
                        </GlassCard>
                    </div>
                </div>
            </div>
        </section>

        <!-- Onboarding Process Section -->
        <section class="py-20 px-6 lg:px-12 border-t border-white/5">
            <div class="max-w-4xl mx-auto">
                <OnboardingSteps
                    client:visible
                    title={data.onboarding!.title}
                    steps={data.onboarding!.steps}
                />
            </div>
        </section>

        <!-- CTA Section -->
        <section
            class="py-24 px-6 lg:px-12 border-t border-white/5 bg-gradient-to-r from-tenx-gold/5 via-transparent to-slate-teal/5"
        >
            <div class="max-w-4xl mx-auto text-center">
                <h2
                    class="text-4xl md:text-5xl font-heading font-bold text-white mb-6"
                >
                    {data.cta!.title}
                </h2>
                <p class="text-xl text-white/60 mb-10 max-w-2xl mx-auto">
                    {data.cta!.description}
                </p>
                <a href="/forms/idc-partner?token=website_direct&utm_source=tenxafrica&utm_medium=website&utm_campaign=partner_network">
                    <GoldButton client:visible className="text-lg px-10 py-4">
                        {data.cta!.button.label}
                    </GoldButton>
                </a>
            </div>
        </section>
    </div>
</MainLayout>
