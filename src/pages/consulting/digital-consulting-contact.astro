---
import TerminalLayout from "../../layouts/TerminalLayout.astro";
import { CanvasHero } from "../../components/CanvasHero";
import { DigitalConsultingChat } from "../../components/DigitalConsultingChat";

const seo = {
  title: "Digital Consulting Terminal",
  description:
    "Initiate secure uplink with Ten X Africa's digital consulting architects.",
};
---

<TerminalLayout title={seo.title} description={seo.description}>
  <div class="relative min-h-screen w-full overflow-hidden">
    <!-- Background Logic -->
    <div class="fixed inset-0 z-0 pointer-events-none">
      <!-- Topographic Mesh (Shape Variant for "Africa Node" look) -->
      <CanvasHero
        client:only="react"
        variant="shape"
        className="absolute inset-0 z-0 opacity-30"
      />

      <!-- Vignette Overlay for focus -->
      <!-- <div
        class="absolute inset-0 bg-[radial-gradient(circle_at_center,transparent_0%,#0a0f14_100%)] z-10"
      >
      </div> -->

      <!-- Scanline / Grain Effect (Optional for "Terminal" feel)
      <div
        class="absolute inset-0 opacity-[0.03] mix-blend-overlay z-20 pointer-events-none"
      >
      </div> -->
    </div>

    <!-- Main Chat Interface -->
    <div class="relative z-30 min-h-screen flex flex-col justify-center">
      <DigitalConsultingChat client:load />
    </div>
  </div>
</TerminalLayout>
