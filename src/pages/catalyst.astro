---
import MainLayout from "../layouts/MainLayout.astro";
import { PageHero } from "../components/PageHero";
import { GlassCard } from "../components/GlassCard";
import { GoldButton } from "../components/GoldButton";
import { StatsCounter } from "../components/StatsCounter";
import { VentureCard } from "../components/OnboardingSteps";
import { getEntry } from "astro:content";

const catalystPage = await getEntry('pages', 'catalyst');

if (!catalystPage) {
    throw new Error('Catalyst page content not found');
}

const { data } = catalystPage;
---

<MainLayout title={data.seo.title} description={data.seo.description}>
    <div class="relative min-h-screen">
        <!-- Hero Section -->
        <PageHero
            client:load
            headline={data.hero.headline}
            subheadline={data.hero.subheadline}
        />

        <!-- Stats Section -->
        <section
            class="py-16 px-6 lg:px-12 border-t border-white/5 bg-black/40"
        >
            <div class="max-w-6xl mx-auto">
                <StatsCounter client:visible stats={data.stats!} />
            </div>
        </section>

        <!-- Dual Audience Section -->
        <section class="py-20 px-6 lg:px-12 border-t border-white/5">
            <div class="max-w-6xl mx-auto">
                <div class="grid lg:grid-cols-2 gap-8">
                    <!-- For Startups -->
                    <GlassCard
                        client:visible
                        className="p-8 lg:p-10"
                        hoverEffect={false}
                    >
                        <div class="mb-6">
                            <span
                                class="text-xs font-mono text-tenx-gold uppercase tracking-widest"
                            >
                                FOR FOUNDERS
                            </span>
                        </div>
                        <h3
                            class="text-2xl md:text-3xl font-heading font-bold text-white mb-4"
                        >
                            {data.forStartups!.title}
                        </h3>
                        <p class="text-white/60 mb-8 leading-relaxed">
                            {data.forStartups!.description}
                        </p>

                        <ul class="space-y-3 mb-8">
                            {
                                data.forStartups!.benefits.map((benefit) => (
                                    <li class="flex items-start gap-3">
                                        <svg
                                            class="w-5 h-5 text-tenx-gold flex-shrink-0 mt-0.5"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M5 13l4 4L19 7"
                                            />
                                        </svg>
                                        <span class="text-white/80">
                                            {benefit}
                                        </span>
                                    </li>
                                ))
                            }
                        </ul>

                        <a href={data.forStartups!.cta.href}>
                            <GoldButton client:visible>
                                {data.forStartups!.cta.label}
                            </GoldButton>
                        </a>
                    </GlassCard>

                    <!-- For Investors -->
                    <GlassCard
                        client:visible
                        className="p-8 lg:p-10 border-slate-teal/30"
                        hoverEffect={false}
                    >
                        <div class="mb-6">
                            <span
                                class="text-xs font-mono text-slate-teal uppercase tracking-widest"
                            >
                                FOR INVESTORS
                            </span>
                        </div>
                        <h3
                            class="text-2xl md:text-3xl font-heading font-bold text-white mb-4"
                        >
                            {data.forInvestors!.title}
                        </h3>
                        <p class="text-white/60 mb-8 leading-relaxed">
                            {data.forInvestors!.description}
                        </p>

                        <ul class="space-y-3 mb-8">
                            {
                                data.forInvestors!.benefits.map((benefit) => (
                                    <li class="flex items-start gap-3">
                                        <svg
                                            class="w-5 h-5 text-slate-teal flex-shrink-0 mt-0.5"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M5 13l4 4L19 7"
                                            />
                                        </svg>
                                        <span class="text-white/80">
                                            {benefit}
                                        </span>
                                    </li>
                                ))
                            }
                        </ul>

                        <a href={data.forInvestors!.cta.href}>
                            <GoldButton client:visible variant="outline">
                                {data.forInvestors!.cta.label}
                            </GoldButton>
                        </a>
                    </GlassCard>
                </div>
            </div>
        </section>

        <!-- Portfolio Section -->
        <section
            class="py-20 px-6 lg:px-12 bg-black/40 border-t border-white/5"
            id="portfolio"
        >
            <div class="max-w-6xl mx-auto">
                <div class="mb-12">
                    <h2
                        class="text-3xl md:text-4xl font-heading font-bold text-white border-l-4 border-tenx-gold pl-4"
                    >
                        PORTFOLIO COMPANIES
                    </h2>
                    <p class="text-white/60 mt-4 max-w-2xl">
                        Ventures we've backed, built, and scaled across the
                        continent.
                    </p>
                </div>

                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {
                        data.portfolio!.map((venture, index) => (
                            <VentureCard
                                client:visible
                                venture={venture}
                                index={index}
                            />
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Stewardship Section -->
        <section class="py-20 px-6 lg:px-12 border-t border-white/5">
            <div class="max-w-6xl mx-auto">
                <div class="grid lg:grid-cols-2 gap-12 items-center">
                    <div>
                        <div class="w-12 h-1 bg-tenx-gold mb-6"></div>
                        <h2
                            class="text-3xl md:text-4xl font-heading font-bold text-white mb-6"
                        >
                            THE STEWARDSHIP MODEL
                        </h2>
                        <p class="text-lg text-white/60 leading-relaxed mb-6">
                            Unlike traditional VCs, we don't just write checks
                            and wait. We actively manage our portfolio
                            companies, providing the governance, reporting, and
                            operational support that investors demand.
                        </p>
                        <p class="text-white/60 leading-relaxed">
                            For investors—whether VC, PE, or government—this
                            means reduced risk and enhanced visibility into your
                            investments. For founders, it means having a partner
                            who's in the trenches with you.
                        </p>
                    </div>

                    <div class="space-y-4">
                        <div
                            class="p-6 bg-black/40 backdrop-blur-sm border border-white/10 rounded-xl"
                        >
                            <h4 class="font-heading font-bold text-white mb-2">
                                Quarterly Reporting
                            </h4>
                            <p class="text-sm text-white/60">
                                Comprehensive financial and operational reports
                                delivered to all stakeholders.
                            </p>
                        </div>
                        <div
                            class="p-6 bg-black/40 backdrop-blur-sm border border-white/10 rounded-xl"
                        >
                            <h4 class="font-heading font-bold text-white mb-2">
                                Board Representation
                            </h4>
                            <p class="text-sm text-white/60">
                                Active board seats with governance expertise and
                                strategic guidance.
                            </p>
                        </div>
                        <div
                            class="p-6 bg-black/40 backdrop-blur-sm border border-white/10 rounded-xl"
                        >
                            <h4 class="font-heading font-bold text-white mb-2">
                                Operational Support
                            </h4>
                            <p class="text-sm text-white/60">
                                Hands-on assistance with hiring, finance, legal,
                                and strategic decisions.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section
            class="py-24 px-6 lg:px-12 border-t border-white/5 bg-gradient-to-r from-tenx-gold/5 via-transparent to-slate-teal/5"
        >
            <div class="max-w-4xl mx-auto text-center">
                <h2
                    class="text-4xl md:text-5xl font-heading font-bold text-white mb-6"
                >
                    READY TO CATALYZE GROWTH?
                </h2>
                <p class="text-xl text-white/60 mb-10 max-w-2xl mx-auto">
                    Whether you're a founder seeking capital or an investor
                    looking for deal flow, we're ready to talk.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="/contact?interest=catalyst">
                        <GoldButton
                            client:visible
                            className="text-lg px-8 py-4"
                        >
                            Apply as Founder
                        </GoldButton>
                    </a>
                    <a href="/contact?interest=catalyst">
                        <GoldButton
                            client:visible
                            variant="outline"
                            className="text-lg px-8 py-4"
                        >
                            Access Deal Flow
                        </GoldButton>
                    </a>
                </div>
            </div>
        </section>
    </div>
</MainLayout>
