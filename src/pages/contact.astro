---
import MainLayout from "../layouts/MainLayout.astro";
import { PageHero } from "../components/PageHero";
import { GlassCard } from "../components/GlassCard";
import { ContactForm } from "../components/ContactForm";
import { getEntry } from "astro:content";

const contactPage = await getEntry('pages', 'contact');
const siteConfig = await getEntry('settings', 'site-config');

if (!contactPage || !siteConfig) {
    throw new Error('Contact page or site config content not found');
}

const { data } = contactPage;
const { data: config } = siteConfig;

// Get interest from URL params if present
const url = new URL(Astro.request.url);
const interestParam = url.searchParams.get("interest") as
    | "consulting"
    | "network"
    | "catalyst"
    | "general"
    | null;
const defaultInterest = interestParam || "general";
---

<MainLayout title={data.seo.title} description={data.seo.description}>
    <div class="relative min-h-screen">
        <!-- Hero Section -->
        <PageHero
            client:load
            headline={data.hero.headline}
            subheadline={data.hero.subheadline}
        />

        <!-- Contact Section -->
        <section class="py-20 px-6 lg:px-12 border-t border-white/5">
            <div class="max-w-6xl mx-auto">
                <div class="grid lg:grid-cols-3 gap-12">
                    <!-- Form (Takes 2 cols) -->
                    <div class="lg:col-span-2">
                        <ContactForm
                            client:load
                            interests={data.form!.interests}
                            submitText={data.form!.submitText}
                            successMessage={data.form!.successMessage}
                            errorMessage={data.form!.errorMessage}
                            placeholders={data.form!.placeholders}
                            defaultInterest={defaultInterest}
                        />
                    </div>

                    <!-- Sidebar -->
                    <div class="space-y-6">
                        <!-- Office Info -->
                        <GlassCard
                            client:visible
                            className="p-6 mb-5"
                            hoverEffect={false}
                        >
                            <h3 class="font-heading font-bold text-white mb-4">
                                {data.office!.title}
                            </h3>
                            <div class="space-y-4">
                                <div class="flex items-start gap-3">
                                    <svg
                                        class="w-5 h-5 text-tenx-gold flex-shrink-0 mt-0.5"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                        ></path>
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                        ></path>
                                    </svg>
                                    <div class="text-sm text-white/80">
                                        {
                                            data.office!.address.map((line) => (
                                                <span class="block">
                                                    {line}
                                                </span>
                                            ))
                                        }
                                    </div>
                                </div>
                                <div class="flex items-center gap-3">
                                    <svg
                                        class="w-5 h-5 text-tenx-gold flex-shrink-0"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                        ></path>
                                    </svg>
                                    <a
                                        href={`mailto:${data.office!.email}`}
                                        class="text-sm text-white/80 hover:text-tenx-gold transition-colors"
                                    >
                                        {data.office!.email}
                                    </a>
                                </div>
                                {
                                    data.office!.phone && (
                                        <div class="flex items-center gap-3">
                                            <svg
                                                class="w-5 h-5 text-tenx-gold flex-shrink-0"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                                />
                                            </svg>
                                            <a
                                                href={`tel:${data.office!.phone}`}
                                                class="text-sm text-white/80 hover:text-tenx-gold transition-colors"
                                            >
                                                {data.office!.phone}
                                            </a>
                                        </div>
                                    )
                                }
                            </div>
                        </GlassCard>

                        <!-- Quick Links -->
                        <GlassCard
                            client:visible
                            className="p-6 my-5"
                            hoverEffect={false}
                        >
                            <h3 class="font-heading font-bold text-white mb-4">
                                QUICK LINKS
                            </h3>
                            <ul class="space-y-3">
                                {config.quickLinks.map((link) => (
                                <li>
                                    <a
                                        href={link.href}
                                        class="text-sm text-white/60 hover:text-tenx-gold transition-colors flex items-center gap-2"
                                    >
                                        <svg
                                            class="w-4 h-4"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M9 5l7 7-7 7"></path>
                                        </svg>
                                        {link.label}
                                    </a>
                                </li>
                                ))}
                            </ul>
                        </GlassCard>

                        <!-- Social Links -->
                        <GlassCard
                            client:visible
                            className="p-6 my-5"
                            hoverEffect={false}
                        >
                            <h3 class="font-heading font-bold text-white mb-4">
                                CONNECT
                            </h3>
                            <div class="flex gap-4">
                                {config.footer.socials.map((social) => (
                                <a
                                    href={social.url}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="w-10 h-10 rounded-lg bg-white/5 flex items-center justify-center text-white/60 hover:bg-tenx-gold hover:text-black transition-all"
                                >
                                    {social.platform === 'linkedin' && (
                                    <svg
                                        class="w-5 h-5"
                                        fill="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                                        ></path>
                                    </svg>
                                    )}
                                    {social.platform === 'twitter' && (
                                    <svg
                                        class="w-5 h-5"
                                        fill="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                                        ></path>
                                    </svg>
                                    )}
                                </a>
                                ))}
                            </div>
                        </GlassCard>
                    </div>
                </div>
            </div>
        </section>
    </div>
</MainLayout>
