---
import MainLayout from "../../layouts/MainLayout.astro";
import { CanvasHero } from "../../components/CanvasHero";
import { GoldButton } from "../../components/GoldButton";
import { StatsCounter } from "../../components/StatsCounter";
import { getEntry } from "astro:content";

const incubationPage = await getEntry('pages', 'incubation-and-funding');

if (!incubationPage) {
    throw new Error('Incubation page content not found');
}

const { data } = incubationPage;
---

<MainLayout title={data.seo.title} description={data.seo.description}>
    <style>
        html {
            scroll-behavior: smooth;
        }
    </style>
    <div class="relative min-h-screen">
        <!-- Hero Section -->
        <section class="relative min-h-[80vh] flex flex-col items-center justify-center px-6 py-20 lg:px-12 overflow-hidden">
            <CanvasHero
                client:only="react"
                variant="shape"
                className="absolute inset-0 z-0"
            />

            <div class="relative z-10 text-center max-w-4xl mx-auto space-y-6">
                <div class="mb-4">
                    <span class="text-xs font-mono text-tenx-gold uppercase tracking-widest">
                        {data.hero.tag}
                    </span>
                </div>
                <h1 class="text-4xl md:text-6xl lg:text-7xl font-heading font-bold tracking-tighter leading-tight text-white mb-4">
                    {data.hero.headline}
                </h1>
                <p class="text-lg md:text-xl text-white/70 max-w-3xl mx-auto leading-relaxed">
                    {data.hero.subheadline}
                </p>
                <div class="pt-6">
                    <a href="#programs">
                        <GoldButton client:visible>
                            Explore Programs
                        </GoldButton>
                    </a>
                </div>
            </div>
        </section>

        <!-- Philosophy Section -->
        <section class="py-20 px-6 lg:px-12 border-t border-white/5">
            <div class="max-w-4xl mx-auto text-center">
                <div class="w-12 h-1 bg-tenx-gold mb-8 mx-auto"></div>
                <h2 class="text-3xl md:text-4xl lg:text-5xl font-heading font-bold text-white mb-6">
                    {data.philosophy?.headline}
                </h2>
                <p class="text-lg md:text-xl text-white/60 leading-relaxed">
                    {data.philosophy?.description}
                </p>
            </div>
        </section>

        <!-- Stats Section -->
        <section class="py-16 px-6 lg:px-12 border-t border-white/5 bg-black/40">
            <div class="max-w-6xl mx-auto">
                <StatsCounter client:visible stats={data.stats ?? []} />
            </div>
        </section>

        <!-- Programs Section -->
        <section id="programs" class="py-20 px-6 lg:px-12 border-t border-white/5">
            <div class="max-w-6xl mx-auto">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-heading font-bold text-white mb-4">
                        {data.programs?.headline}
                    </h2>
                    <p class="text-lg text-white/60 max-w-2xl mx-auto">
                        {data.programs?.description}
                    </p>
                </div>

                <div class="space-y-8">
                    {data.programs?.tracks.map((track: any, index: any) => (
                        <div class="rounded-2xl border border-tenx-gold/30 bg-gradient-to-br from-tenx-gold/5 to-white/[0.02] backdrop-blur-md p-8 lg:p-10 hover:border-tenx-gold/50 transition-all">
                            <div class="flex flex-col lg:flex-row gap-8">
                                <!-- Left: Overview -->
                                <div class="lg:w-1/3">
                                    <div class="text-5xl mb-4">{track.icon}</div>
                                    <h3 class="text-2xl font-heading font-bold text-white mb-2">
                                        {track.title}
                                    </h3>
                                    <p class="text-sm text-tenx-gold mb-4">{track.stage}</p>
                                    <div class="space-y-2 text-sm text-white/60">
                                        <p><strong class="text-white">Duration:</strong> {track.duration}</p>
                                        <p><strong class="text-white">Investment:</strong> {track.investment}</p>
                                    </div>
                                </div>

                                <!-- Right: Details -->
                                <div class="lg:w-2/3 grid md:grid-cols-2 gap-6">
                                    <div>
                                        <h4 class="text-sm font-mono text-tenx-gold uppercase tracking-wide mb-3">
                                            Deliverables
                                        </h4>
                                        <ul class="space-y-2">
                                            {track.deliverables.map((item: any) => (
                                                <li class="flex items-start gap-2 text-white/70 text-sm">
                                                    <svg class="w-4 h-4 text-tenx-gold flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                                    </svg>
                                                    <span>{item}</span>
                                                </li>
                                            ))}
                                        </ul>
                                    </div>
                                    <div>
                                        <h4 class="text-sm font-mono text-white/70 uppercase tracking-wide mb-3">
                                            Expected Outcomes
                                        </h4>
                                        <ul class="space-y-2">
                                            {track.outcomes.map((item: any) => (
                                                <li class="flex items-start gap-2 text-white/70 text-sm">
                                                    <svg class="w-4 h-4 text-white/50 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                    </svg>
                                                    <span>{item}</span>
                                                </li>
                                            ))}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Services Section -->
        <section class="py-20 px-6 lg:px-12 border-t border-white/5 bg-black/40">
            <div class="max-w-6xl mx-auto">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-heading font-bold text-white mb-4">
                        {data.services?.headline}
                    </h2>
                </div>

                <div class="grid md:grid-cols-2 gap-8">
                    {data.services && 'cards' in data.services && (data.services as any).cards.map((card: any) => (
                        <a href="#get-started" class="group">
                            <div class="h-full rounded-2xl border border-white/10 bg-gradient-to-br from-white/5 to-white/[0.02] backdrop-blur-md p-8 transition-all hover:border-tenx-gold/50 hover:from-tenx-gold/5">
                                <div class="text-4xl mb-4">{card.icon}</div>
                                <h3 class="text-xl font-heading font-bold text-white mb-2">
                                    {card.title}
                                </h3>
                                <p class="text-sm text-tenx-gold/80 mb-4">{card.subtitle}</p>
                                <p class="text-white/60 mb-6 leading-relaxed">
                                    {card.description}
                                </p>
                                <div class="flex flex-wrap gap-2">
                                    {card.keywords.map((keyword: any) => (
                                        <span class="text-xs px-3 py-1 rounded-full bg-white/5 text-white/70">
                                            {keyword}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        </a>
                    ))}
                </div>
            </div>
        </section>

        <!-- Process Section -->
        <section class="py-20 px-6 lg:px-12 border-t border-white/5">
            <div class="max-w-5xl mx-auto">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-heading font-bold text-white mb-4">
                        {data.process?.headline}
                    </h2>
                </div>

                <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
                    {data.process?.steps.map((step) => (
                        <div class="text-center">
                            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-tenx-gold/20 text-tenx-gold font-heading font-bold text-xl mb-4">
                                {step.number}
                            </div>
                            <h3 class="text-lg font-heading font-bold text-white mb-3">
                                {step.title}
                            </h3>
                            <p class="text-sm text-white/60 leading-relaxed">
                                {step.description}
                            </p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Final CTA Section -->
        <section id="get-started" class="py-24 px-6 lg:px-12 border-t border-white/5 bg-gradient-to-b from-transparent via-tenx-gold/5 to-transparent">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-4xl md:text-5xl font-heading font-bold text-white mb-6">
                    {data.finalCta?.headline}
                </h2>
                <p class="text-xl text-white/60 mb-8">
                    {data.finalCta?.description}
                </p>

                <div class="mb-10">
                    <div class="inline-block text-left">
                        <p class="text-sm text-white/50 mb-3 uppercase tracking-wide">We fix these problems:</p>
                        <ul class="space-y-2">
                            {data.finalCta?.painPoints && data.finalCta.painPoints.map((point: any) => (
                                <li class="flex items-start gap-3 text-white/70">
                                    <svg class="w-5 h-5 text-tenx-gold flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                                    </svg>
                                    <span>{point}</span>
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>

                <a href={data.finalCta?.buttonHref}>
                    <GoldButton client:visible className="text-lg px-10 py-4">
                        {data.finalCta?.buttonLabel}
                    </GoldButton>
                </a>
            </div>
        </section>
    </div>
</MainLayout>
