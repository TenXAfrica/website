---
import MainLayout from "../../layouts/MainLayout.astro";
import { GoldButton } from "../../components/GoldButton";
import { CanvasHero } from "../../components/CanvasHero";
import { getEntry } from "astro:content";

const techImplementationPage = await getEntry("pages", "tech-implementation");

if (!techImplementationPage) {
  throw new Error("Tech Implementation page content not found");
}

const { data } = techImplementationPage;
---

<MainLayout title={data.seo.title} description={data.seo.description}>
  <style>
    html {
      scroll-behavior: smooth;
    }
  </style>
  <div class="relative min-h-screen">
    <!-- Hero Section -->
    <section class="relative min-h-[90vh] flex flex-col items-center justify-center px-6 py-20 lg:px-12 overflow-hidden">
      <!-- Background mesh -->
      <CanvasHero
        client:only="react"
        variant="shape"
        className="absolute inset-0 z-0"
      />

      <!-- Content -->
      <div class="relative z-10 text-center max-w-4xl mx-auto space-y-6">
        <!-- Service tag -->
        {data.hero.tag && (
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-tenx-gold/15 border border-tenx-gold/40">
            <span class="w-2 h-2 rounded-full bg-tenx-gold animate-pulse"></span>
            <span class="text-xs tracking-[0.2em] uppercase font-bold text-tenx-gold">{data.hero.tag}</span>
          </div>
        )}

        <!-- Main headline -->
        <h1 class="text-5xl md:text-7xl lg:text-8xl font-heading font-bold tracking-tighter leading-tight text-white mb-4">
          {data.hero.headline}
        </h1>

        <!-- Subheadline -->
        <p class="text-lg md:text-xl lg:text-2xl text-white/70 max-w-3xl mx-auto leading-relaxed">
          {data.hero.subheadline}
        </p>

        <!-- CTA -->
        {data.hero.cta && (
          <div class="flex justify-center pt-8">
            <a href={data.hero.cta.href}>
              <GoldButton client:load>{data.hero.cta.label}</GoldButton>
            </a>
          </div>
        )}
      </div>

      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 opacity-50 animate-bounce">
        <span class="text-[10px] tracking-widest uppercase">Explore</span>
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-tenx-gold">
          <rect x="5" y="2" width="14" height="20" rx="7"></rect>
          <line x1="12" y1="6" x2="12" y2="10"></line>
        </svg>
      </div>
    </section>

    <!-- Philosophy Section -->
    {data.philosophy && (
      <section class="py-20 px-6 lg:px-12 border-t border-white/5 bg-gradient-to-b from-transparent via-tenx-gold/5 to-transparent">
        <div class="max-w-4xl mx-auto text-center">
          <div class="w-12 h-1 bg-tenx-gold mb-6 mx-auto"></div>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-heading font-bold text-white mb-6">
            {data.philosophy.headline}
          </h2>
          <p class="text-lg md:text-xl text-white/70 leading-relaxed">
            {data.philosophy.description}
          </p>
        </div>
      </section>
    )}

    <!-- Core Capabilities Section -->
    {data.capabilities && (
      <section class="py-20 px-6 lg:px-12 border-t border-white/5">
        <div class="max-w-6xl mx-auto">
          <!-- Section header -->
          <div class="mb-16 max-w-2xl">
            <div class="w-12 h-1 bg-tenx-gold mb-6"></div>
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-heading font-bold text-white mb-4">
              {data.capabilities.headline}
            </h2>
            <p class="text-white/70 text-lg leading-relaxed">
              {data.capabilities.description}
            </p>
          </div>

          <!-- Cards grid -->
          <div class="grid md:grid-cols-3 gap-8">
            {data.capabilities.cards.map((card, index) => (
              <a href="#get-started" class="group block">
                <div class="relative h-full rounded-2xl border border-white/10 bg-gradient-to-br from-white/5 to-white/[0.02] backdrop-blur-md p-8 transition-all duration-300 hover:border-tenx-gold/60 hover:bg-gradient-to-br hover:from-white/10 hover:to-white/[0.05] cursor-pointer">
                  {/* Glow effect on hover */}
                  <div class="absolute -inset-4 rounded-2xl bg-gradient-to-br from-tenx-gold/20 to-transparent blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 -z-10" />

                  {/* Icon */}
                  <div class="mb-6 flex h-16 w-16 items-center justify-center rounded-xl bg-tenx-gold/15 text-tenx-gold group-hover:bg-tenx-gold/25 transition-colors">
                    <div class="text-3xl">{card.icon}</div>
                  </div>

                  {/* Title */}
                  <h3 class="text-xl font-heading font-bold text-white mb-2 group-hover:text-tenx-gold transition-colors">
                    {card.title}
                  </h3>

                  {/* Subtitle */}
                  <p class="text-tenx-gold/80 text-sm font-medium mb-3">
                    {card.subtitle}
                  </p>

                  {/* Description */}
                  <p class="text-white/70 text-sm leading-relaxed mb-6">
                    {card.description}
                  </p>

                  {/* Keywords */}
                  <div class="flex flex-wrap gap-2">
                    {card.keywords.map((keyword) => (
                      <span class="inline-flex items-center rounded-full bg-tenx-gold/10 px-3 py-1 text-xs font-medium text-tenx-gold border border-tenx-gold/30">
                        {keyword}
                      </span>
                    ))}
                  </div>

                  {/* Arrow indicator */}
                  <div class="absolute bottom-6 right-6 opacity-0 group-hover:opacity-100 transition-opacity">
                    <svg class="w-5 h-5 text-tenx-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                    </svg>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Tech Stack Section -->
    {data.techStack && (
      <section class="py-20 px-6 lg:px-12 border-t border-white/5 bg-gradient-to-b from-transparent via-tenx-gold/5 to-transparent">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <div class="w-12 h-1 bg-tenx-gold mb-6 mx-auto"></div>
            <h2 class="text-3xl md:text-4xl font-heading font-bold text-white mb-4">
              {data.techStack.headline}
            </h2>
            <p class="text-white/70 text-lg max-w-2xl mx-auto">
              {data.techStack.description}
            </p>
          </div>

          <!-- Tech Grid -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            {data.techStack.technologies.map((tech) => (
              <div class="group rounded-xl border border-white/10 bg-gradient-to-br from-white/5 to-white/[0.02] backdrop-blur-md p-6 hover:border-tenx-gold/40 transition-all duration-300 text-center">
                <h4 class="font-heading font-bold text-white mb-1 group-hover:text-tenx-gold transition-colors">
                  {tech.name}
                </h4>
                <p class="text-xs text-white/50">
                  {tech.category}
                </p>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Process Section -->
    {data.process && (
      <section class="py-20 px-6 lg:px-12 border-t border-white/5">
        <div class="max-w-4xl mx-auto">
          <div class="mb-12">
            <div class="w-12 h-1 bg-tenx-gold mb-6"></div>
            <h2 class="text-3xl md:text-4xl font-heading font-bold text-white">
              {data.process.headline}
            </h2>
          </div>

          <div class="space-y-6">
            {data.process.steps.map((step) => (
              <div class="rounded-xl border border-white/10 bg-gradient-to-r from-white/5 to-white/[0.02] backdrop-blur-md p-6 hover:border-tenx-gold/40 transition-colors">
                <div class="flex gap-4 items-start">
                  <span class="text-3xl font-heading font-bold text-tenx-gold">{step.number}</span>
                  <div>
                    <h3 class="text-lg font-heading font-bold text-white mb-2">{step.title}</h3>
                    <p class="text-white/60 text-sm">{step.description}</p>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Final CTA Section -->
    {data.finalCta && (
      <section id="get-started" class="py-20 px-6 lg:px-12 border-t border-white/5">
        <div class="max-w-4xl mx-auto">
          <div class="rounded-2xl border border-tenx-gold/40 bg-gradient-to-r from-tenx-gold/10 to-white/5 backdrop-blur-md p-12 md:p-16 text-center space-y-6">
            <h2 class="text-3xl md:text-4xl font-heading font-bold text-white">
              {data.finalCta.headline}
            </h2>
            <p class="text-lg text-white/70 max-w-2xl mx-auto">
              {data.finalCta.description}
            </p>

            {/* Pain Points List */}
            {data.finalCta.painPoints && (
              <div class="max-w-xl mx-auto text-left space-y-3 py-6">
                <p class="text-sm text-white/50 uppercase tracking-wide text-center mb-4">Common Pain Points:</p>
                {data.finalCta.painPoints.map((point) => (
                  <div class="flex items-start gap-3 text-white/80">
                    <svg class="w-5 h-5 text-tenx-gold flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-sm">"{point}"</span>
                  </div>
                ))}
              </div>
            )}

            <a href={data.finalCta.buttonHref}>
              <GoldButton client:visible>{data.finalCta.buttonLabel}</GoldButton>
            </a>
          </div>
        </div>
      </section>
    )}
  </div>
</MainLayout>
