---
import MainLayout from "../layouts/MainLayout.astro";
import { CanvasHero } from "../components/CanvasHero";
import { GoldButton } from "../components/GoldButton";
---

<MainLayout
    title="404 - Page Not Found | Ten X Africa"
    description="The page you are looking for does not exist."
>
    <div
        class="relative w-full min-h-[80vh] flex flex-col items-center justify-center overflow-hidden"
    >
        <!-- Africa Node Background -->
        <CanvasHero
            client:only="react"
            variant="shape"
            className="fixed inset-0 z-0"
        />

        <!-- Content -->
        <div
            class="relative z-10 text-center px-4 space-y-8 max-w-4xl mx-auto py-20"
        >
            <div
                class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white/5 border border-white/10 backdrop-blur-md mb-2 animate-fade-in-up"
            >
                <span class="w-1.5 h-1.5 rounded-full bg-red-500 animate-pulse"
                ></span>
                <span class="text-xs font-mono tracking-widest text-white/70"
                    >404</span
                >
            </div>

            <h1
                class="text-6xl md:text-8xl font-heading font-bold tracking-tighter leading-tight text-white"
            >
                Oops!
            </h1>

            <p
                class="text-xl text-white/60 leading-relaxed font-light max-w-2xl mx-auto"
            >
                The page you requested could not be found. Let's get you back to
                the heart of the innovation engine.
            </p>

            <div class="pt-4">
                <a href="/">
                    <GoldButton client:load>Return Home</GoldButton>
                </a>
            </div>
        </div>
    </div>
</MainLayout>
